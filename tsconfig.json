{
  "include": ["./src"],
  "exclude": [],
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,

    "module": "node16",
    "moduleResolution": "node16",
    "rootDir": "./src",

    "newLine": "lf",
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["es2022"],
    "target": "es2022",

    "skipLibCheck": true
  }
}
